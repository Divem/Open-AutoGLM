/* 悬浮截图样式 */
.floating-screenshot {
    position: fixed;
    top: 80px;
    right: 20px;
    width: 300px;
    max-width: 90vw;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    border: 1px solid rgba(0, 0, 0, 0.1);
    z-index: 1000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
    will-change: transform;
    contain: layout style paint;
}

.floating-screenshot:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.2);
}

/* 悬浮窗口拖拽状态 */
.floating-screenshot.dragging {
    cursor: grabbing;
    opacity: 0.9;
    transform: scale(1.02);
    transition: none;
    z-index: 1001;
}

/* 悬浮窗口隐藏状态 */
.floating-screenshot.hidden {
    opacity: 0;
    transform: scale(0.9) translateY(-20px);
    pointer-events: none;
}

/* 悬浮窗口最小化状态 */
.floating-screenshot.minimized {
    height: 48px;
    overflow: hidden;
}

.floating-screenshot.minimized .floating-screenshot-content {
    display: none;
}

/* 悬浮窗口最大化状态 */
.floating-screenshot.maximized {
    top: 10px;
    left: 10px;
    right: 10px;
    width: auto;
    max-width: none;
}

/* 拖拽手柄 - 窗口头部 */
.floating-screenshot-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 12px 12px 0 0;
    cursor: grab;
    user-select: none;
    position: relative;
}

.floating-screenshot-header:active,
.floating-screenshot-header:focus {
    cursor: grabbing;
    outline: none;
    box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.3);
}

/* 窗口标题 */
.screenshot-title {
    display: flex;
    align-items: center;
    font-size: 0.9rem;
    font-weight: 500;
    flex: 1;
}

/* 窗口控制按钮 */
.screenshot-controls {
    display: flex;
    gap: 8px;
    margin-left: 12px;
}

.screenshot-control-btn {
    width: 24px;
    height: 24px;
    border: none;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border-radius: 4px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    transition: all 0.2s ease;
    position: relative;
}

.screenshot-control-btn:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(1.1);
}

.screenshot-control-btn:active {
    transform: scale(0.95);
}

.screenshot-control-btn:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.5);
}

/* 截图内容区域 */
.floating-screenshot-content {
    padding: 16px;
    min-height: 200px;
    max-height: 400px;
    overflow-y: auto;
}

.floating-screenshot-container {
    position: relative;
    background: #f8f9fa;
    border-radius: 8px;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px dashed #e1e8ed;
}

.floating-screenshot-container img {
    max-width: 100%;
    max-height: 300px;
    border-radius: 6px;
    cursor: pointer;
    transition: transform 0.2s ease;
}

.floating-screenshot-container img:hover {
    transform: scale(1.02);
}

/* 截图预览样式 */
.screenshot-preview {
    position: relative;
    cursor: pointer;
    transition: transform 0.2s ease;
}

.screenshot-preview:hover {
    transform: scale(1.02);
}

.screenshot-preview .zoom-hint {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.screenshot-preview:hover .zoom-hint {
    opacity: 1;
}

/* 加载状态指示器 */
.screenshot-loading-indicator {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: none;
}

.floating-screenshot.loading .screenshot-loading-indicator {
    display: block;
}

.floating-screenshot.loading .floating-screenshot-container {
    opacity: 0.5;
}

/* 切换按钮样式 */
.screenshot-toggle-btn {
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.8);
    cursor: pointer;
    padding: 8px;
    border-radius: 6px;
    font-size: 1rem;
    margin-right: 8px;
    transition: all 0.2s ease;
    position: relative;
}

.screenshot-toggle-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    transform: translateY(-1px);
}

.screenshot-toggle-btn:active {
    transform: translateY(0);
}

.screenshot-toggle-btn:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.3);
}

/* 切换按钮状态 */
.screenshot-toggle-btn.active {
    color: white;
    background: rgba(255, 255, 255, 0.15);
}

.screenshot-toggle-btn.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    background: white;
    border-radius: 50%;
}

/* 屏幕阅读器专用样式 */
.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* 响应式设计 - 平板设备 */
@media (max-width: 1024px) {
